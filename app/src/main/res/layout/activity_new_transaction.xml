<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewTransactionActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="32dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo_no_background"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FirebaseUI.AuthMethodPicker"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_transaction_ET_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:hint="Label"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/new_transaction_DROPDOWN_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/new_transaction_LBL_add_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/blue_900"
        android:text="Add Category To List"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FirebaseUI.AuthMethodPicker"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_transaction_ET_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:hint="Amount"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FirebaseUI.AuthMethodPicker"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_transaction_ET_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:focusable="false"
            android:hint="Date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FirebaseUI.AuthMethodPicker"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_transaction_ET_payments"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:hint="Number of payments"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/new_transaction_LBL_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/red_700"
        tools:text="validation error"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_transaction_BTN_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/blue_900"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Add"
        android:textStyle="bold"
        android:textSize="20sp"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_transaction_BTN_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="#FEF7FF"
        app:strokeColor="@color/blue_900"
        app:strokeWidth="3dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Back"
        android:textStyle="bold"
        android:textSize="20sp"
        app:cornerRadius="8dp" />

</androidx.appcompat.widget.LinearLayoutCompat>