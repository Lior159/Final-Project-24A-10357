<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/transaction_line_LINE_line"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:paddingHorizontal="6dp"
    android:paddingVertical="2dp"
    android:background="@color/lightblue_100">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/transaction_line_LBL_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="Date"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/transaction_line_LBL_category"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="Category"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/transaction_line_LBL_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="Label"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/transaction_line_LBL_amount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="Amount"
        />

</androidx.appcompat.widget.LinearLayoutCompat>